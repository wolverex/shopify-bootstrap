<div class="navbar-header">
  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#nav-menu">
    <span class="sr-only">Toggle navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
</div>

<!-- Collect the nav links, forms, and other content for toggling -->
<div class="collapse navbar-collapse" id="nav-menu">
  <ul class="nav navbar-nav">
    {% for link in linklists.main-menu.links %}
    {% if linklists[link.handle] == empty %}
    <li{% if link.active %} class="current"{% endif %}>
      <a href="{{ link.url }}">
        <span>{{ link.title }}</span></a>
    </li>
    {% else %}
    <li class="dropdown{% if link.active %} current{% endif %}">
      <a href="{{ link.url }}" class="dropdown-toggle" data-toggle="dropdown">
        <span>{{ link.title }}</span> <b class="caret"></b></a>
      <ul class="dropdown-menu">
        {% for l in linklists[link.handle].links %}
        <li{% if l.active %} class="current"{% endif %}><a href="{{ l.url }}">{{ l.title }}</a></li>
        {% endfor %}
      </ul>
    </li>
    {% endif %}
    {% endfor %}
  </ul>
</div><!-- /.navbar-collapse -->